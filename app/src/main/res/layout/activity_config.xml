<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/configView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/behavior"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:gravity="center_vertical"
                android:paddingLeft="3dp"
                android:paddingRight="0dp"
                android:text="@string/text_action_compo" />

            <Button
                android:id="@+id/openActionMenuButton"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="@color/ConfigComponent_Dark"
                android:gravity="left|center_vertical"
                android:paddingLeft="5dp"
                android:paddingRight="0dp"
                android:text="@string/text_action_conf_button"
                android:textSize="13.5sp" />

            <LinearLayout
                android:id="@+id/actionMenu"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <Button
                    android:id="@+id/rightTapConfButton"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:background="@color/ConfigComponent_Light"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="7dp"
                    android:paddingRight="0dp"
                    android:text="@string/right_press"
                    android:textSize="13.5sp" />

                <Button
                    android:id="@+id/centerTapConfButton"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:background="@color/ConfigComponent_Dark"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="7dp"
                    android:paddingRight="0dp"
                    android:text="@string/center_press"
                    android:textSize="13.5sp" />

                <Button
                    android:id="@+id/leftTapConfButton"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:background="@color/ConfigComponent_Light"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="7dp"
                    android:paddingRight="0dp"
                    android:text="@string/left_press"
                    android:textSize="13.5sp" />

                <Button
                    android:id="@+id/rightLongTapConfButton"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:background="@color/ConfigComponent_Dark"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="7dp"
                    android:paddingRight="0dp"
                    android:text="@string/right_press_long"
                    android:textSize="13.5sp" />

                <Button
                    android:id="@+id/centerLongTapConfButton"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:background="@color/ConfigComponent_Light"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="7dp"
                    android:paddingRight="0dp"
                    android:text="@string/center_press_long"
                    android:textSize="13.5sp" />

                <Button
                    android:id="@+id/leftLongTapConfButton"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:background="@color/ConfigComponent_Dark"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="7dp"
                    android:paddingRight="0dp"
                    android:text="@string/left_press_long"
                    android:textSize="13.5sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/ConfigComponent_Light"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tweetAdditionalAcquisitionFlagText"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="5dp"
                    android:paddingRight="0dp"
                    android:text="@string/text_tweet_additional_acquisition"
                    android:textColor="#000000"
                    android:textSize="13.5sp" />

                <CheckBox
                    android:id="@+id/confirmationLessGetTweetCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/ConfigComponent_Dark"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="0dp">

                <TextView
                    android:id="@+id/sleeplessText"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:text="@string/sleepless"
                    android:textColor="#000000"
                    android:textSize="13.5sp" />

                <CheckBox
                    android:id="@+id/isSleeplessCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/ConfigComponent_Light"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="0dp">

                <TextView
                    android:id="@+id/useHighResolutionIconText"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:text="@string/use_high_resolution_icon"
                    android:textColor="#000000"
                    android:textSize="13.5sp" />

                <CheckBox
                    android:id="@+id/useHighResolutionIconCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/ConfigComponent_Dark"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="0dp">

                <TextView
                    android:id="@+id/fastScrollText"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:text="@string/use_fast_scroll"
                    android:textColor="#000000"
                    android:textSize="13.5sp" />

                <CheckBox
                    android:id="@+id/fastScrollCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/ConfigComponent_Light"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="0dp">

                <TextView
                    android:id="@+id/displayImageThumbText"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:text="@string/enable_image_thumb"
                    android:textColor="#000000"
                    android:textSize="13.5sp" />

                <CheckBox
                    android:id="@+id/displayImageThumbCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0" />

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:paddingLeft="3dp"
                android:paddingRight="0dp"
                android:text="@string/text_layout_compo" />

            <Button
                android:id="@+id/chooseThemeButton"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_margin="0dp"
                android:background="@color/ConfigComponent_Dark"
                android:gravity="left|center_vertical"
                android:lines="@integer/abc_max_action_buttons"
                android:longClickable="false"
                android:paddingLeft="5dp"
                android:paddingRight="0dp"
                android:text="@string/text_choose_theme_button"
                android:textSize="13.5sp" />

            <Button
                android:id="@+id/chooseCharSizeButton"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="@color/ConfigComponent_Light"
                android:gravity="left|center_vertical"
                android:lines="@integer/abc_max_action_buttons"
                android:longClickable="false"
                android:paddingLeft="5dp"
                android:paddingRight="0dp"
                android:text="@string/text_choose_char_size_button"
                android:textSize="13.5sp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="3dp"
                android:paddingRight="0dp"
                android:text="@string/text_license_compo" />

            <Button
                android:id="@+id/showTwitter4j_license"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="@color/ConfigComponent_Dark"
                android:gravity="left|center_vertical"
                android:paddingLeft="5dp"
                android:paddingRight="0dp"
                android:text="@string/text_showTwitter4j_license"
                android:textSize="13.5sp" />

            <Button
                android:id="@+id/showOrmLiteL_license"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="@color/ConfigComponent_Light"
                android:gravity="left|center_vertical"
                android:paddingLeft="5dp"
                android:paddingRight="0dp"
                android:text="@string/text_showOrmLiteL_license"
                android:textSize="13.5sp" />

        </LinearLayout>

    </LinearLayout>


</ScrollView>