<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:id="@+id/configView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/behavior"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:background="#00000000"
                    android:text="動作" />

                <Button
                    android:id="@+id/openActionMenuButton"
                    android:text="アクション"
                    android:background="#00000000"
                    android:gravity="left|center_vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_margin="0dp"
                    android:textSize="13dp" />

                <LinearLayout
                    android:id="@+id/actionMenu"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <Button
                        android:id="@+id/rightTapConfButton"
                        android:text="右押し"
                        android:background="#00000000"
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:gravity="left|center_vertical"
                        android:layout_margin="0dp"
                        android:textSize="13dp" />

                    <Button
                        android:id="@+id/centerTapConfButton"
                        android:text="中押し"
                        android:background="#00000000"
                        android:layout_width="fill_parent"
                        android:gravity="left|center_vertical"
                        android:layout_height="50dp"
                        android:layout_margin="0dp"
                        android:textSize="13dp" />

                    <Button
                        android:id="@+id/leftTapConfButton"
                        android:text="左押し"
                        android:background="#00000000"
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:gravity="left|center_vertical"
                        android:layout_margin="0dp"
                        android:textSize="13dp" />

                    <Button
                        android:id="@+id/rightLongTapConfButton"
                        android:text="右長押し"
                        android:background="#00000000"
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:layout_margin="0dp"
                        android:gravity="left|center_vertical"
                        android:textSize="13dp" />

                    <Button
                        android:id="@+id/centerLongTapConfButton"
                        android:text="中長押し"
                        android:background="#00000000"
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:gravity="left|center_vertical"
                        android:layout_margin="0dp"
                        android:textSize="13dp" />

                    <Button
                        android:id="@+id/leftLongTapConfButton"
                        android:text="左長押し"
                        android:gravity="left|center_vertical"
                        android:background="#00000000"
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:layout_margin="0dp"
                        android:textSize="13dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tweetAdditionalAcquisitionFlagText"
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:text="確認なしにツイートを更に追加取得"
                        android:textSize="13dp"
                        android:textColor="#000000"
                        android:gravity="left|center_vertical"
                        android:layout_weight="1" />

                    <CheckBox
                        android:id="@+id/confirmationLessGetTweetCheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="center_vertical" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/sleeplessText"
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:text="スリープしない"
                        android:textSize="13dp"
                        android:textColor="#000000"
                        android:gravity="left|center_vertical"
                        android:layout_weight="1" />

                    <CheckBox
                        android:id="@+id/isSleeplessCheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="center_vertical" />

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:text="レイアウト" />

                <Button
                    android:id="@+id/chooseThemeButton"
                    android:text="テーマ"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:textSize="13dp"
                    android:gravity="left|center_vertical"
                    android:background="#00000000"
                    android:longClickable="false"
                    android:layout_margin="0dp"
                    android:lines="@integer/abc_max_action_buttons" />

                <Button
                    android:id="@+id/chooseCharSizeButton"
                    android:text="文字の大きさ"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:textSize="13dp"
                    android:gravity="left|center_vertical"
                    android:background="#00000000"
                    android:longClickable="false"
                    android:layout_margin="0dp"
                    android:lines="@integer/abc_max_action_buttons" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>