<resources>

    <style name="AppTheme_Light" parent="Theme.AppCompat.Light">
        <item name="actionBarStyle">@style/ActionBarStyle_Light</item>
        <item name="actionBarSize">45dip</item>
        <item name="editTextStyle">@style/EditTextStyle_Light</item>
    </style>


    <style name="AppTheme_Dark" parent="ThemeOverlay.AppCompat.Dark">
        <item name="actionBarStyle">@style/ActionBarStyle_Dark</item>
        <item name="actionBarSize">45dip</item>
        <item name="editTextStyle">@style/EditTextStyle_Dark</item>
    </style>


    <style name="ActionBarStyle_Dark" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@android:color/background_dark</item>
        <item name="titleTextStyle">@style/ActionBarTitleStyle</item>
    </style>

    <style name="ActionBarStyle_Light" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@android:color/background_light</item>
        <item name="titleTextStyle">@style/ActionBarTitleStyle</item>
    </style>

    <style name="ActionBarTitleStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="EditTextStyle_Dark" parent="Widget.AppCompat.EditText">
        <item name="android:textCursorDrawable">@drawable/light_cursor</item>
    </style>

    <style name="EditTextStyle_Light" parent="Widget.AppCompat.EditText">
        <item name="android:textCursorDrawable">@drawable/dark_cursor</item>
    </style>
</resources>
